ul.submissions {
  margin: 0px;
  padding: 0px;

  li.submission {
    background-color: #eaeaea;
    display: inline-block;
    float: left;
    width: 220px;
    border: 1px solid #ddd;
    margin-right: 10px;
    padding: 10px;

    h3.title {
      margin-bottom: 0px;
      margin-top: 10px;
    }

    div.creator {
      font-size: 0.8em;
      color: #444;
      margin-bottom: 10px;
    }

    div.submitted_by {
      font-size: 0.8em;
      color: #444;
    }

    div.tags {
      font-size: 0.8em;
      margin-top: 10px;

      span.tag {
        padding: 3px;
        background-color: steelblue;
        color: white;
        border-radius: 3px 3px 3px 3px;
        cursor: pointer;
      }

      span.tag:hover {
        background-color: orange;
      }
    }
  }
}