.layout.single {
  header {

    background-color:#ad3fad;
    display: inline-block;
    color: white;
    padding: 20px;
    width: 100%;

    h1 {
      margin-top : 0px;
    }
    .links {
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;

        li {
          display: inline-block;
          float: left;
          margin-right: 20px;

          a {
            text-decoration: none;
            color: $link_color;
          }

          a:hover {
            color: $link_color_hover;
          }
        }
      }
    }
  }
}