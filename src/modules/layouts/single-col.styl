header {
  background: #9654A1;
  color: white;
  padding: 20px;
  width: 100%;

  h1 {
    margin-top : 0px;
    background-image: url(src/assets/mobilevis-logo.png);
    height: 107px;
    width: 357px;
    margin: auto;
  }
}

.links {
  background: #80508C;
  text-align: center;

  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;

    li {
      display: inline-block;
      float: left;
      margin-right: 2em;
      line-height: 3em;

      a {
        text-decoration: none;
        color: $link_color;
      }

      a:hover {
        color: $link_color_hover;
      }
    }
  }
}